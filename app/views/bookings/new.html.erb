<h1>Your Flight Information</h1>

<p>Flight from: <%= "#{@flight.from_airport.code} to #{@flight.to_airport.code} on #{@flight.departure}" %></p>

<h3>Please fill out the passenger information below</h3>
<%= form_for @booking do |f| %>
  <%= f.hidden_field(:flight_id) %>
  <% @num_passengers.times do %>
    <%= fields_for :passengers do |passenger| %>
      <%= f.hidden_field(:flight_id, value: @flight.id) %>
      <%= f.label :name, "Full Name: " %>
      <%= passenger.text_field :name %><br><br>
      <%= f.label :email, "Email: " %>
      <%= passenger.email_field :email %><br><br>
      <hr>
    <% end %>
  <% end %>
  <%= f.submit "Book your Flight!" %>
<% end %>
