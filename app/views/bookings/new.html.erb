<h1 class="page-header">Your Flight Information</h1>

<p class="summary">Flight from: <%= "#{@flight.from_airport.code} to #{@flight.to_airport.code} on #{@flight.departure}" %></p>

<h3>Please fill out the passenger information below</h3>

<div class="container">
  <%= form_for @booking do |f| %>
    <%= f.hidden_field(:flight_id, value: @flight.id) %>
      <%= f.fields_for :passengers do |passenger| %>
        <div class="row">
          <em>Passenger Info</em>
          <%= passenger.hidden_field(:flight_id, value: @flight.id) %>
          <div class="col">
            <%= passenger.text_field :name, placeholder: "Name", class: "form-control" %><br><br>
          </div>
          <div class="col">
            <%= passenger.email_field :email, placeholder: "Email", class: "form-control" %><br><br>
          </div>
        </div>
      <% end %>
    <%= f.submit "Book your Flight!", class: "btn btn-primary booking-btn" %>
  <% end %>
</div>
