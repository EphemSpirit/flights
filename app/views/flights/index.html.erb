<div class="container">
  <h1 class="page-header">Book a Flight</h1>

  <div class="container">
    <form class="form-inline">
      <%= form_for(:flight, url: flights_path, method: :GET) do |f| %>
        <div class="form-group">
          From: <%= f.select(:from_airport, options_for_select(@airports), class: "form-control") %><br><br>
        </div>
        <div class="form-group">
          To: <%= f.select(:to_airport,options_for_select(@airports), class: "form-control") %><br><br>
        </div>
        <div class="form-group">
          Date of Flight: <%= f.select(:departure, options_for_select(@dates), class: "form-control") %><br><br>
        </div>
        <div class="form-group">
          Passengers: <%= f.select(:passengers, options_for_select(@passengers), class: "form-control") %><br><br>
        </div>
        <%= f.submit "Search Flights", { :class => "btn btn-primary" } %>
      <% end %>
    </form>
  </div>

  <div>
    <% if params[:flight] && @results.any? %>
      <%= render 'results' %>
    <% elsif params[:flight] && !@results.any? %>
      <p>No results! Sorry about that...</p>
    <% end %>
  </div>
</div>
