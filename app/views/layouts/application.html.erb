<!DOCTYPE html>
<html>
  <head>
    <title>Flights</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top">
      <div class="container">
        <h3 id="company">Speedy Airlines</h3>
        <h3 class="nav navbar-nav navbar-right" id="saying">Choose a flight today!</h3>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
